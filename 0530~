n=4
for y in range(n):
    for x in range(n-y):
        print("*", end=" ")
    print() 

n=5
for y in range(n):
    for x in range(n-y-1):
        print(" ", end=" ")
    for x in range(y+1): 
        print("*", end=" ")
    print()
    
    n=6
r=4
bunbo=1
for x in range(1,r+1):
    bunbo=bunbo*x
print(bunbo)

n=6
r=4
bunshi=1
for y in range(n,n-r,-1):
    bunshi=bunshi*y
print(bunshi)

n=6
r=4
bunbo=1
bunshi=1
for x in range(1,r+1):
    bunbo=bunbo*x
for y in range(n,n-r,-1):
    bunshi=bunshi*y
print(bunshi/bunbo)

n=6
for r in range(1,n):
    bunbo=1
    bunshi=1
    for x in range(1,r+1):
        bunbo=bunbo*x
    for y in range(n,n-r,-1):
        bunshi=bunshi*y
    print(bunshi/bunbo, end=" ") 






